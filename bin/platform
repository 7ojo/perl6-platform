#!/usr/bin/env perl6

use v6;
use lib 'lib';
use Platform::CLI;
use CommandLine::Usage;

my %*SUB-MAIN-OPTS = :named-anywhere;

#| A tool for running projects through container environment
sub MAIN(*@args, *%args) {
    %args = set-defaults(|%args);
    try {
        CATCH {
            default {
                USAGE;
            }
        }
        cli(|@args, |%args);
    }
}

sub USAGE {
    CommandLine::Usage.new(
        :name( $*PROGRAM-NAME.IO.basename ),
        :func( &cli ),
        :desc( &MAIN.candidates[0].WHY.Str ),
        :conf( &set-defaults ),
        ).parse.say;
}
